---
/**
 * Angel Minters Directory
 * Displays both people and organizations who are angel minters
 */
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection, getEntry, render } from 'astro:content';
import { getAngelMinters, sortEntitiesByName } from '@/lib/entity-utils';
import EntityCard from '@/components/entities/EntityCard.astro';

const angelMinters = await getAngelMinters();
const sortedMinters = sortEntitiesByName(angelMinters);

const pageTitle = 'Angel Minters';
const pageDescription = 'Community members and organizations participating in Breadchain crowdstaking and solidarity funding';

// Try to load markdown content from docs
let pageContent = null;
try {
	const docEntry = await getEntry('docs', 'solidarity-primitives/crowdstaking/angel-minters');
	if (docEntry) {
		const { Content } = await render(docEntry);
		pageContent = Content;
	}
} catch (e) {
	// Doc doesn't exist yet, that's okay
}
---

<StarlightPage
	frontmatter={{
		title: pageTitle,
		description: pageDescription,
	}}
>
	{pageContent && (
		<div class="page-content">
			<pageContent />
		</div>
	)}

	{sortedMinters.length === 0 ? (
		<div class="empty-state">
			<p>No angel minters found. Check back soon!</p>
		</div>
	) : (
		<div class="entity-grid">
			{sortedMinters.map((entity) => (
				<EntityCard entity={entity} />
			))}
		</div>
	)}
</StarlightPage>

<style>
	.page-content {
		margin-bottom: 3rem;
	}

	.entity-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 1.5rem;
	}

	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--sl-color-text-accent);
	}

	@media (max-width: 768px) {
		.entity-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
