---
/**
 * Angel Minters Directory
 * Displays both people and organizations who are angel minters
 */
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getAngelMinters, sortEntitiesByName } from '@/lib/entity-utils';
import EntityCard from '@/components/entities/EntityCard.astro';

const angelMinters = await getAngelMinters();
const sortedMinters = sortEntitiesByName(angelMinters);

const pageTitle = 'Angel Minters';
const pageDescription = 'Community members and organizations participating in Breadchain crowdstaking and solidarity funding';
---

<StarlightPage
	frontmatter={{
		title: pageTitle,
		description: pageDescription,
	}}
>
	{sortedMinters.length === 0 ? (
		<div class="empty-state">
			<p>No angel minters found. Check back soon!</p>
		</div>
	) : (
		<div class="entity-grid">
			{sortedMinters.map((entity) => (
				<EntityCard entity={entity} showType={true} />
			))}
		</div>
	)}
</StarlightPage>

<style>
	.entity-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 1.5rem;
	}

	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--sl-color-text-accent);
	}

	@media (max-width: 768px) {
		.entity-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
