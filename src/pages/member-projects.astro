---
/**
 * Member Projects Directory
 * Displays organizations that are Breadchain member projects
 */
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getEntry, render } from 'astro:content';
import { getMemberProjects } from '@/lib/entity-utils';
import EntityCard from '@/components/entities/EntityCard.astro';

const memberProjects = await getMemberProjects();
const sortedProjects = memberProjects.sort((a, b) =>
	a.data.name.localeCompare(b.data.name)
);

const pageTitle = 'Member Projects';
const pageDescription = 'Cooperatives, mutual aid organizations, and solidarity economy projects in the Breadchain network';

// Try to load markdown content from docs
let pageContent = null;
try {
	const docEntry = await getEntry('docs', 'solidarity-primitives/crowdstaking/member-projects');
	if (docEntry) {
		const { Content } = await render(docEntry);
		pageContent = Content;
	}
} catch (e) {
	// Doc doesn't exist yet, that's okay
}
---

<StarlightPage
	frontmatter={{
		title: pageTitle,
		description: pageDescription,
	}}
>
	{pageContent && (
		<div class="page-content">
			<pageContent />
		</div>
	)}

	{sortedProjects.length === 0 ? (
		<div class="empty-state">
			<p>No member projects found. Check back soon!</p>
		</div>
	) : (
		<div class="entity-grid">
			{sortedProjects.map((project) => (
				<EntityCard entity={{...project, entityType: 'organization' as const}} />
			))}
		</div>
	)}
</StarlightPage>

<style>
	.page-content {
		margin-bottom: 3rem;
	}

	.entity-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 1.5rem;
	}

	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--sl-color-text-accent);
	}

	@media (max-width: 768px) {
		.entity-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
