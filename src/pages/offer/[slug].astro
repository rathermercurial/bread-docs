---
/**
 * Marketplace offer detail page
 */
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';
import { resolveOfferProvider } from '@/lib/entity-utils';

export async function getStaticPaths() {
	const offers = await getCollection('offer');

	return offers.map((offer) => ({
		params: { slug: offer.id },
		props: { offer },
	}));
}

interface Props {
	offer: CollectionEntry<'offer'>;
}

const { offer } = Astro.props;

// Render markdown content
const { Content, headings } = await render(offer);

// Resolve provider
const provider = await resolveOfferProvider(offer);

const pageTitle = offer.data.name;
const pageDescription = offer.data.description || `Marketplace offer: ${offer.data.name}`;
---

<StarlightPage
	frontmatter={{
		title: pageTitle,
		description: pageDescription,
	}}
	headings={headings}
>
	<article class="offer-detail">
				<header class="offer-header">
					{offer.data.image && (
						<img
							src={offer.data.image}
							alt={offer.data.name}
							class="offer-image"
						/>
					)}
				</header>

				<!-- Main Content -->
				<div class="offer-content">
					<h2>What's Offered</h2>
					<p class="item-offered">{offer.data.itemOffered}</p>

					<Content />
				</div>
	</article>

	<!-- Offer Details -->
	<aside slot="right-sidebar" class="offer-meta">
					{provider && (
						<section class="meta-section">
							<h2>Offered By</h2>
							{typeof provider === 'string' ? (
								<p>{provider}</p>
							) : (
								<p>
									<a href={`/${provider.collection}/${provider.id}`}>
										{provider.data.name}
									</a>
								</p>
							)}
						</section>
					)}

					{offer.data.url && (
						<section class="meta-section">
							<a href={offer.data.url} target="_blank" rel="noopener noreferrer" class="cta-button">
								Learn More â†—
							</a>
						</section>
					)}
	</aside>
</StarlightPage>

<style>
	.offer-detail {
		display: grid;
		grid-template-columns: 1fr 300px;
		gap: 2rem;
		max-width: 1400px;
	}

	.offer-header {
		display: flex;
		gap: 2rem;
		align-items: flex-start;
		margin-bottom: 2rem;
	}

	.offer-image {
		width: 200px;
		height: 200px;
		object-fit: cover;
		border-radius: 8px;
	}

	.offer-content {
		min-width: 0;
	}

	.offer-content h2 {
		color: var(--sl-color-text-accent);
	}

	.item-offered {
		font-size: 1.1rem;
		padding: 1rem;
		background: var(--sl-color-bg-sidebar);
		border-left: 4px solid var(--sl-color-text-accent);
		border-radius: 4px;
		margin-bottom: 2rem;
		color: var(--sl-color-gray-3);
	}

	.offer-meta {
		min-width: 0;
	}

	.meta-section {
		margin-bottom: 1.5rem;
		padding: 1rem;
		background: var(--sl-color-bg-sidebar);
		border: 1px solid var(--sl-color-gray-5);
		border-radius: 8px;
	}

	.meta-section h2 {
		font-size: 1rem;
		margin-top: 0;
		margin-bottom: 0.75rem;
		text-transform: uppercase;
		color: var(--sl-color-text-accent);
	}

	.meta-section p {
		color: var(--sl-color-gray-3);
		margin: 0;
	}

	.meta-section a {
		color: var(--sl-color-text-accent);
		text-decoration: none;
	}

	.meta-section a:hover {
		text-decoration: underline;
	}

	.cta-button {
		display: block;
		width: 100%;
		padding: 1rem;
		background: var(--sl-color-text-accent);
		color: var(--sl-color-white);
		text-align: center;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		transition: opacity 0.2s;
	}

	.cta-button:hover {
		opacity: 0.9;
	}

	@media (max-width: 1024px) {
		.offer-detail {
			grid-template-columns: 1fr;
		}

		.offer-header {
			flex-direction: column;
		}
	}
</style>
