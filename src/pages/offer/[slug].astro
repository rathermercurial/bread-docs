---
/**
 * Marketplace offer detail page
 */
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection, render, type CollectionEntry } from 'astro:content';
import { resolveOfferProvider } from '@/lib/entity-utils';

export async function getStaticPaths() {
	const offers = await getCollection('offer');

	return offers.map((offer) => ({
		params: { slug: offer.id },
		props: { offer },
	}));
}

interface Props {
	offer: CollectionEntry<'offer'>;
}

const { offer } = Astro.props;

// Render markdown content
const { Content, headings } = await render(offer);

// Resolve provider
const provider = await resolveOfferProvider(offer);

const pageTitle = offer.data.name;
const pageDescription = offer.data.description || `Marketplace offer: ${offer.data.name}`;
---

<StarlightPage
	frontmatter={{
		title: pageTitle,
		description: pageDescription,
	}}
	headings={headings}
>
	<article class="offer-detail">
				<header class="offer-header">
					{offer.data.image && (
						<img
							src={offer.data.image}
							alt={offer.data.name}
							class="offer-image"
						/>
					)}
				</header>

				<!-- Main Content -->
				<div class="offer-content">
					<h2>What's Offered</h2>
					<p class="item-offered">{offer.data.itemOffered}</p>

					<Content />
				</div>
	</article>

	<!-- Offer Details -->
	<aside slot="right-sidebar" class="offer-meta">
					{provider && (
						<section class="meta-section">
							<h2>Offered By</h2>
							{typeof provider === 'string' ? (
								<p>{provider}</p>
							) : (
								<p>
									<a href={`/${provider.collection}/${provider.id}`}>
										{provider.data.name}
									</a>
								</p>
							)}
						</section>
					)}

					{offer.data.price && (
						<section class="meta-section">
							<h2>Pricing</h2>
							<p class="price">
								{offer.data.price}
								{offer.data.priceCurrency && offer.data.priceCurrency !== 'USD' && (
									<span class="currency"> {offer.data.priceCurrency}</span>
								)}
							</p>
						</section>
					)}

					{offer.data.availability && (
						<section class="meta-section">
							<h2>Availability</h2>
							<p class={`availability ${offer.data.availability.toLowerCase().replace(/\s+/g, '-')}`}>
								{offer.data.availability.replace(/([A-Z])/g, ' $1').trim()}
							</p>
						</section>
					)}

					{(offer.data.validFrom || offer.data.validThrough) && (
						<section class="meta-section">
							<h2>Validity</h2>
							{offer.data.validFrom && (
								<p>From: {new Date(offer.data.validFrom).toLocaleDateString()}</p>
							)}
							{offer.data.validThrough && (
								<p>Until: {new Date(offer.data.validThrough).toLocaleDateString()}</p>
							)}
						</section>
					)}

					{offer.data.category && offer.data.category.length > 0 && (
						<section class="meta-section">
							<h2>Categories</h2>
							<div class="categories">
								{offer.data.category.map((cat) => (
									<span class="category-tag">{cat}</span>
								))}
							</div>
						</section>
					)}

					{offer.data.url && (
						<section class="meta-section">
							<a href={offer.data.url} target="_blank" rel="noopener noreferrer" class="cta-button">
								Learn More â†—
							</a>
						</section>
					)}
	</aside>
</StarlightPage>

<style>
	.offer-page {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}

	.offer-detail {
		display: grid;
		grid-template-columns: 1fr 300px;
		gap: 2rem;
	}

	.offer-header {
		grid-column: 1 / -1;
		display: flex;
		gap: 2rem;
		align-items: flex-start;
		margin-bottom: 2rem;
	}

	.offer-image {
		width: 200px;
		height: 200px;
		object-fit: cover;
		border-radius: 8px;
	}

	.offer-title h1 {
		margin: 0;
		font-size: 2.5rem;
	}

	.offer-description {
		font-size: 1.2rem;
		color: #444;
		margin-top: 1rem;
	}

	.offer-content {
		grid-column: 1 / 2;
	}

	.item-offered {
		font-size: 1.1rem;
		padding: 1rem;
		background: #f6f3eb;
		border-left: 4px solid #ea6023;
		margin-bottom: 2rem;
	}

	.offer-meta {
		grid-column: 2 / 3;
	}

	.meta-section {
		margin-bottom: 1.5rem;
		padding: 1rem;
		background: #f6f3eb;
		border-radius: 8px;
	}

	.meta-section h2 {
		font-size: 1rem;
		margin-top: 0;
		margin-bottom: 0.75rem;
		text-transform: uppercase;
		color: #666;
	}

	.price {
		font-size: 1.5rem;
		font-weight: bold;
		color: #ea6023;
		margin: 0;
	}

	.availability {
		padding: 0.5rem 1rem;
		border-radius: 4px;
		font-weight: 600;
		display: inline-block;
	}

	.availability.in-stock {
		background: #286b63;
		color: white;
	}

	.availability.out-of-stock {
		background: #999;
		color: white;
	}

	.availability.limited-availability {
		background: #ea6023;
		color: white;
	}

	.categories {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.category-tag {
		display: inline-block;
		padding: 0.25rem 0.75rem;
		background: white;
		border: 1px solid #ddd;
		border-radius: 4px;
		font-size: 0.875rem;
	}

	.cta-button {
		display: block;
		width: 100%;
		padding: 1rem;
		background: #ea6023;
		color: white;
		text-align: center;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		transition: background 0.2s;
	}

	.cta-button:hover {
		background: #d35520;
	}

	nav a {
		text-decoration: none;
		color: #ea6023;
	}

	footer {
		margin-top: 4rem;
		padding: 2rem;
		text-align: center;
		border-top: 1px solid #ddd;
	}

	footer a {
		color: #ea6023;
		text-decoration: none;
		margin: 0 1rem;
	}

	@media (max-width: 768px) {
		.offer-detail {
			grid-template-columns: 1fr;
		}

		.offer-content,
		.offer-meta {
			grid-column: 1 / -1;
		}

		.offer-header {
			flex-direction: column;
		}
	}
</style>
