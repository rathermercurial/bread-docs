---
/**
 * Contributors Directory
 * Displays people who contribute to Breadchain
 */
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getContributors } from '@/lib/entity-utils';
import EntityCard from '@/components/entities/EntityCard.astro';

const contributors = await getContributors();
const sortedContributors = contributors.sort((a, b) =>
	a.data.name.localeCompare(b.data.name)
);

const pageTitle = 'Contributors';
const pageDescription = 'People who build, organize, and support the Breadchain solidarity economy network';
---

<StarlightPage
	frontmatter={{
		title: pageTitle,
		description: pageDescription,
	}}
>
	{sortedContributors.length === 0 ? (
		<div class="empty-state">
			<p>No contributors found. Want to get involved?</p>
			<p><a href="/about/get-involved">Learn how to contribute â†’</a></p>
		</div>
	) : (
		<div class="entity-grid">
			{sortedContributors.map((contributor) => (
				<EntityCard entity={{...contributor, entityType: 'person' as const}} />
			))}
		</div>
	)}
</StarlightPage>

<style>
	.entity-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 1.5rem;
	}

	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--sl-color-text-accent);
	}

	.empty-state a {
		color: var(--sl-color-text-accent);
		font-weight: 600;
	}

	@media (max-width: 768px) {
		.entity-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
