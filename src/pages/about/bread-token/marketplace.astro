---
/**
 * Marketplace Directory
 * Displays all marketplace offers
 */
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection, getEntry, render } from 'astro:content';
import OfferCard from '@/components/entities/OfferCard.astro';

const allOffers = await getCollection('offer');
const sortedOffers = allOffers.sort((a, b) =>
	(a.data.name || '').localeCompare(b.data.name || '')
);

const pageTitle = 'Marketplace';
const pageDescription = 'Goods, services, and offerings from the Breadchain solidarity economy network';

// Try to load markdown content from docs
// Try both with and without /index suffix
let docEntry = await getEntry('docs', 'about/bread-token/marketplace/index');
if (!docEntry) {
	docEntry = await getEntry('docs', 'about/bread-token/marketplace');
}
const { Content: PageContent } = docEntry ? await render(docEntry) : { Content: null };
---

<StarlightPage
	frontmatter={{
		title: pageTitle,
		description: pageDescription,
	}}
>
	{PageContent && (
		<div class="page-content">
			<PageContent />
		</div>
	)}

	{sortedOffers.length === 0 ? (
		<div class="empty-state">
			<p>No marketplace offerings found. Check back soon!</p>
		</div>
	) : (
		<div class="offer-grid">
			{sortedOffers.map((offer) => (
				<OfferCard offer={offer} />
			))}
		</div>
	)}
</StarlightPage>

<style>
	.page-content {
		margin-bottom: 3rem;
	}

	.offer-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
		gap: 1.5rem;
		align-items: start;
	}

	.empty-state {
		text-align: center;
		padding: 4rem 2rem;
		color: var(--sl-color-text-accent);
	}

	@media (max-width: 768px) {
		.offer-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
